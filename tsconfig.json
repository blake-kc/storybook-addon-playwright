{
  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "__mocks__/**/*",
    "typings/**/*",
    "setupTests.ts",
    "test-data/**/*",
    "__test_data__/**/*",
    "__manual_mocks__/**/*",
    "middleware.d.ts",
    "configs.d.ts",
    "stories/**/*"
  ],
  "exclude": ["**/.storybook/**/*", "node_modules", "**/node_modules/*"]
}
